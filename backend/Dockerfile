# Stage 1: Build
FROM node:20-alpine AS builder

WORKDIR /app

COPY backend/package.json backend/package-lock.json ./
RUN npm install

COPY backend/ .
RUN npm run build || echo "Skipping if no build script"

# Stage 2: Runtime
FROM node:20-alpine

WORKDIR /app

COPY --from=builder /app .

EXPOSE 8080

CMD ["npm", "start"]
